<section class="w-full py-16 px-24">
  <div class="max-w-7xl mx-auto">
    <!-- Section header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl text-gray-800 mb-2">Move to What Moves You</h2>
      <p class="text-gray-600">Keep calm & travel on</p>
    </div>

    <!-- Categories grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Category 1 -->
      <div class="group cursor-pointer">
        <div class="overflow-hidden rounded-2xl mb-4">
          <img
            src="https://dummyimage.com/600x600/ededed/3b3b3b"
            alt="Enjoy the great cold"
            class="w-full h-80 object-cover transition-transform duration-300 group-hover:scale-105"
          />
        </div>
        <h3 class="text-xl text-gray-800 text-center mb-2">
          Enjoy the great cold
        </h3>
        <p class="text-gray-500 text-center text-sm">6,872 properties</p>
      </div>

      <!-- Category 2 -->
      <div class="group cursor-pointer">
        <div class="overflow-hidden rounded-2xl mb-4">
          <img
            src="https://dummyimage.com/600x600/ededed/3b3b3b"
            alt="Pick up the earliest sunrise"
            class="w-full h-80 object-cover transition-transform duration-300 group-hover:scale-105"
          />
        </div>
        <h3 class="text-xl text-gray-800 text-center mb-2">
          Pick up the earliest sunrise
        </h3>
        <p class="text-gray-500 text-center text-sm">5,672 properties</p>
      </div>

      <!-- Category 3 -->
      <div class="group cursor-pointer">
        <div class="overflow-hidden rounded-2xl mb-4">
          <img
            src="https://dummyimage.com/600x600/ededed/3b3b3b"
            alt="Unique stay"
            class="w-full h-80 object-cover transition-transform duration-300 group-hover:scale-105"
          />
        </div>
        <h3 class="text-xl text-gray-800 text-center mb-2">Unique stay</h3>
        <p class="text-gray-500 text-center text-sm">8,672 properties</p>
      </div>
    </div>

    <!-- Pagination dots -->
  </div>
</section>
