---
import PropertyCard from "./PropertyCard.astro";
import propertiesData from "../data/properties.json";

interface Property {
  id: number;
  title: string;
  location: string;
  price: number;
  image: string;
  featured: boolean;
}

// Filter featured properties
const featuredProperties = propertiesData.filter(
  (property: Property) => property.featured
);
---

<section class="w-full py-6 px-16" aria-labelledby="featured-heading">
  <div class="w-full py-16 px-24 bg-gray-50 rounded-3xl">
    <div class="max-w-7xl mx-auto">
      <!-- Section header -->
      <header class="flex justify-between items-end mb-8">
        <div>
          <p class="text-primary font-medium mb-1">Come Now!</p>
          <h2 id="featured-heading" class="text-4xl text-gray-700 mb-2">
            Live Who You Are.
          </h2>
          <p class="text-gray-500">Own the Home Meant for You.</p>
        </div>
        <div class="flex items-center gap-4">
          <div class="flex items-center gap-2">
            <label for="sort-select" class="text-sm text-gray-600"
              >Recently added</label
            >
            <svg
              class="w-4 h-4 text-gray-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </div>
          <a
            href="/properties"
            class="bg-primary text-white font-medium hover:bg-secondary transition-colors py-2 px-4 rounded-[11px]"
            aria-label="View all properties"
          >
            See more
          </a>
        </div>
      </header>

      <!-- Properties grid -->
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6"
        role="list"
        aria-label="Featured properties"
      >
        {
          featuredProperties.map((property) => (
            <PropertyCard
              id={property.id}
              title={property.title}
              location={property.location}
              price={property.price}
              image={property.image}
              featured={property.featured}
            />
          ))
        }
      </div>

      {
        featuredProperties.length === 0 && (
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">
              No featured properties available at the moment.
            </p>
          </div>
        )
      }
    </div>
  </div>
</section>
