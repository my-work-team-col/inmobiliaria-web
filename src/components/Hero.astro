---
import bgHero from "@/assets/images/bg-hero.jpg";
import { Icon } from "astro-icon/components";
---

<div class="w-full py-6 px-16">
  <div class="relative w-full h-[600px]">
    <img
      src={bgHero.src}
      class="absolute inset-0 w-full h-full object-cover rounded-3xl"
      alt="Hero background"
    />

    <!-- Dark overlay -->
    <div class="absolute inset-0 bg-black/40 rounded-3xl"></div>

    <!-- Content overlay -->
    <div class="relative h-full flex items-center justify-center">
      <div class="text-center max-w-4xl">
        <h2 class="text-6xl font-bold text-white mb-4">Encuentra tu hogar</h2>
        <p class="text-2xl text-white mb-8">
          Descubre las mejores propiedades disponibles
        </p>

        <!-- Search box -->
        <div class="max-w-2xl mx-auto">
          <div
            class="bg-white rounded-xl shadow-2xl p-2 flex flex-col sm:flex-row gap-2 items-center"
          >
            <!-- Search input -->
            <div class="flex-1 w-full relative">
              <input
                type="text"
                placeholder="Enter an address, neighborhood, city, or ZIP code"
                class="w-full px-4 py-3 text-gray-700 placeholder-gray-400 focus:outline-none rounded-lg text-sm"
              />
            </div>

            <!-- Search button -->
            <button
              class="bg-primary hover:bg-secondary text-white px-6 py-3 rounded-[11px] font-medium transition-colors flex items-center justify-center gap-2 shadow-sm w-full sm:w-auto"
            >
              <Icon name="hugeicons:search-01" />
              <span>Buscar</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
