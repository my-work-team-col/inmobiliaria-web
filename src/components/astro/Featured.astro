---
// src/sections/FeaturedProperties.astro
import PropertyCard from "@/components/astro/PropertyCard.astro";
import propertiesData from "@/data/properties.json";
import type { Property } from "@/types";

// Aseguramos el tipo para TS (si lo usas)
const allProperties = propertiesData as Property[];

// Filter featured properties
const featuredProperties = allProperties.filter(
  (property: Property) => property.featured
);
---
<section class="w-full py-6 px-4 md:px-8 lg:px-16" aria-labelledby="featured-heading">
  <div class="w-full py-10 px-4 md:py-12 md:px-10 lg:py-16 lg:px-16 bg-gray-100 rounded-3xl">
    <div class="w-full mx-auto">
      <!-- Section header -->
      <header class="flex flex-col gap-6 md:flex-row md:justify-between md:items-end mb-10">
        <div>
          <p class="text-primary font-medium mb-1">Proyectos</p>
          <h2
            id="featured-heading"
            class="text-3xl md:text-4xl lg:text-5xl text-gray-700 mb-2 leading-tight"
          >
            Que te podría interesar
          </h2>
          <p class="text-gray-500 text-sm md:text-base">Últimos proyectos publicados</p>
        </div>

        <div class="flex items-center gap-3 md:gap-4">
          <div class="flex items-center gap-2">
            <label for="sort-select" class="text-sm text-gray-600">
              Recently added
            </label>
            <svg
              class="w-4 h-4 text-gray-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"
              />
            </svg>
          </div>

          <a
            href="/properties"
            class="bg-primary text-white font-medium hover:bg-secondary transition-colors py-2 px-4 rounded-[11px] whitespace-nowrap"
            aria-label="View all properties"
          >
            See more
          </a>
        </div>
      </header>

      <!-- Properties grid -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6"
        role="list"
        aria-label="Featured properties"
      >
        {featuredProperties.length > 0 ? (
          featuredProperties.map((property) => (
            <PropertyCard
              id={property.id}
              title={property.title}
              location={property.location}
              price={property.price}
              image={property.image}
              featured={property.featured}
            />
          ))
        ) : (
          <div class="col-span-full text-center py-12">
            <p class="text-gray-500 text-lg">
              No featured properties available at the moment.
            </p>
          </div>
        )}
      </div>
    </div>
  </div>
</section>
