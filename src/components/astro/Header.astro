---
import { Icon } from '@iconify/vue';

interface Props {
  shadow?: boolean;
}

const { shadow = true } = Astro.props;
---

<header class:list={[
  "bg-white relative z-[100]",
  { "shadow-sm": shadow }
]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center gap-2">
        <div
          class="w-10 h-10 bg-gradient-to-br from-purple-600 to-indigo-600 rounded-full flex items-center justify-center"
        >
          <Icon icon="hugeicons:home-01" class="w-6 h-6 text-white" client:only="vue" />
        </div>
        <span class="text-xl font-semibold text-gray-900">Inmobiliaria</span>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center gap-8">
        <a
          href="/"
          class="text-gray-700 hover:text-purple-600 transition-colors font-medium"
          >Home</a
        >
        <a
          href="/listing"
          class="text-gray-700 hover:text-purple-600 transition-colors font-medium"
          >Propiedades</a
        >
        <a
          href="/agentes"
          class="text-gray-700 hover:text-purple-600 transition-colors font-medium"
          >Agentes</a
        >
        <a
          href="/ventas"
          class="text-gray-700 hover:text-purple-600 transition-colors font-medium"
          >Ventas</a
        >
      </nav>

      <!-- Right side actions -->
      <div class="flex items-center gap-4">
        <!-- Contact button -->
        <a
          href="/contacto"
          class="bg-secondary hover:bg-primary text-white px-6 py-2 rounded-[11px] font-medium transition-colors shadow-sm"
        >
          Contacto
        </a>

        <!-- Mobile menu button -->
        <button class="md:hidden p-2 text-gray-700 hover:text-purple-600">
          <Icon icon="hugeicons:menu-02" class="w-6 h-6" client:only="vue" />
        </button>
      </div>
    </div>
  </div>
</header>
