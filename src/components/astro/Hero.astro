---
import bgHero from "@/assets/images/bg-hero.jpg";
import { Icon } from "astro-icon/components";
import SearchFilter from "../vue/SearchFilter.vue";
---

<div class="w-full py-6 px-16 ">
  <!-- wrapper container -->
  <div class="relative w-full h-[600px]  px-4 lg:px-40">
      <img
        src={bgHero.src}
        class="absolute inset-0 w-full h-full object-cover rounded-3xl"
        alt="Hero background"
      />

      <!-- Dark overlay -->
      <div class="absolute inset-0 bg-black/40 rounded-3xl"></div>

      <!-- Content overlay -->
      <div class=" relative h-full flex flex-col items-center justify-center p-0" >
        <div class="text-center  " >
          <h2 class="text-6xl text-white mb-4">Encuentra tu hogar</h2>
          <p class="text-2xl text-white mb-8">
            Descubre las mejores propiedades disponibles
          </p>
        </div>
          
          
          <SearchFilter client:load/>


      </div>
  <!--  -->
  </div>
</div>
