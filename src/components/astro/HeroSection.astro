---
import HeroPropertyCard from "@/components/astro/HeroPropertyCard.astro";
---

<section class="w-full py-10 md:py-12 lg:py-14 px-6 md:px-10 lg:px-16">
  <div class="grid lg:grid-cols-2 gap-12 items-center bg-gray-700 rounded-3xl mx-auto overflow-hidden">

    <!-- LEFT CONTENT -->
    <div class="space-y-6 md:space-y-8 px-6 md:px-12 lg:pl-24 py-10 text-white">

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl lg:text-[46px] font-bold leading-none text-center md:text-left">
        Soporte Hipotecario
      </h1>

      <div class="flex flex-col md:flex-row items-center gap-4 md:gap-4 text-center md:text-left">
        <h1 class="text-4xl md:text-5xl lg:text-[46px] font-bold leading-none">
          Hecho Fácil
        </h1>

        <!-- Avatar stack -->
        <div class="flex items-center justify-center md:justify-start mt-2 md:mt-0">
          <img src="/images/property-4.jpg" class="w-10 h-10 md:w-12 md:h-12 rounded-full border-2 border-white shadow bg-slate-300" />
          <img src="/images/property-3.jpg" class="w-10 h-10 md:w-12 md:h-12 rounded-full border-2 border-white shadow bg-slate-300 -ml-3" />
          <img src="/images/property-2.jpg" class="w-10 h-10 md:w-12 md:h-12 rounded-full border-2 border-white shadow bg-slate-300 -ml-3" />
        </div>
      </div>

      <!-- Description -->
      <p class="text-base md:text-lg text-gray-300 max-w-lg text-center md:text-left">
        Encuentra asesoría personalizada, las mejores opciones de vivienda 
        y un proceso de aprobación más rápido y moderno.
      </p>

      <!-- Floating card -->
      <div class="relative flex justify-center  lg:justify-start">
        <HeroPropertyCard />
      </div>

    </div>

    <!-- RIGHT IMAGE -->
    <div class="relative w-full min-h-[380px] md:min-h-[520px] lg:min-h-[650px] overflow-hidden shadow-xl flex flex-col justify-end py-6 md:py-8 lg:py-10">

      <!-- IMAGE BACKGROUND -->
      <img 
        src="/images/casa-diseno-villa.png" 
        alt="Modern Building"
        class="absolute inset-0 w-full h-full object-cover z-0 rounded-none lg:rounded-tr-3xl lg:rounded-br-3xl" 
      />

      <!-- Stats -->
      <div class="relative z-10 w-full flex flex-wrap md:flex-nowrap justify-center gap-6 md:gap-8 p-6 bg-black/20 backdrop-blur-sm">

        <div>
          <p class="text-2xl md:text-3xl lg:text-[34px] font-bold text-white">1.300+</p>
          <p class="text-gray-300 text-xs md:text-sm">Asesores disponibles</p>
        </div>

        <div>
          <p class="text-2xl md:text-3xl lg:text-[34px] font-bold text-white">19.000+</p>
          <p class="text-gray-300 text-xs md:text-sm">Clientes satisfechos</p>
        </div>

        <div>
          <p class="text-2xl md:text-3xl lg:text-[34px] font-bold text-white">250.000+</p>
          <p class="text-gray-300 text-xs md:text-sm">Solicitudes gestionadas</p>
        </div>
      </div>

      <!-- Hover circles -->
      <div class="absolute top-4 md:top-6 left-4 md:left-6 w-14 md:w-20 h-14 md:h-20 rounded-full bg-white/20 backdrop-blur-sm border border-white/30 z-10"></div>
      <div class="absolute bottom-4 md:bottom-6 right-4 md:right-8 w-14 md:w-20 h-14 md:h-20 rounded-full bg-white/20 backdrop-blur-sm border border-white/30 z-10"></div>

    </div>

  </div>
</section>
