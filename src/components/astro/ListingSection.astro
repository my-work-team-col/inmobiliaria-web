---
import ListingCard from "@/components/astro/ListingCard.astro";
import type { Listing } from "@/types";

// ⭐ Permite controlar cuántas propiedades mostrar
interface Props {
  limit?: number;
}

const { limit = 4 } = Astro.props;

type PropertiesResponse = {
  properties: Listing[];
};

// 1. Fetch desde tu API real (usando URL relativa)
const res = await fetch("/api/properties");
const data = await res.json() as PropertiesResponse;

const allProperties = data.properties;

// 2. Filtrar destacadas
let featuredProperties = allProperties.filter((p) => p.featured);

// 3. Aplicar límite
featuredProperties = featuredProperties.slice(0, limit);
---

<section class="w-full py-6 px-4 md:px-8 lg:px-16" aria-labelledby="featured-heading">
  <div class="w-full py-10 px-4 md:py-12 md:px-10 lg:py-16 lg:px-16 bg-gray-100 rounded-3xl">
    <div class="w-full mx-auto">

      <!-- Header -->
      <header class="flex flex-col gap-6 md:flex-row md:justify-between md:items-end mb-10">
        <div>
          <p class="text-primary font-medium mb-1">Proyectos</p>
          <h2 id="featured-heading"
              class="text-3xl md:text-4xl lg:text-5xl text-gray-700 mb-2 leading-tight">
            Que te podría interesar
          </h2>
          <p class="text-gray-500 text-sm md:text-base">Últimos proyectos publicados</p>
        </div>

        <div class="flex items-center gap-3 md:gap-4">
          <a
            href="/properties"
            class="bg-primary text-white font-medium hover:bg-secondary transition-colors py-2 px-4 rounded-[11px]"
          >
            See more
          </a>
        </div>
      </header>

      <!-- Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {featuredProperties.length > 0 ? (
          featuredProperties.map((item) => (
            <ListingCard {...item} />
          ))
        ) : (
          <div class="col-span-full text-center py-12">
            <p class="text-gray-500 text-lg">
              No featured properties available at the moment.
            </p>
          </div>
        )}
      </div>

    </div>
  </div>
</section>
