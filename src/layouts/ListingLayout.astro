---
import "../styles/global.css";
import Header from "@/components/astro/Header.astro";
import Footer from "@/components/astro/Footer.astro";
import Hero from "@/components/astro/PageHeader.astro";
import PageHeader from "@/components/astro/PageHeader.astro";
import bgHeader from "@/assets/images/bg-listingProperties.jpg";

import CategoriesNavbar from "@/components/vue/CategoriesNavbar.vue";
import { getCategoryTree } from "@/lib/db/categoryQueries";
import { mapCategoryTreeArray } from "@/mappers/category.mapper";

const rawCategoryTree = await getCategoryTree();
const categoryTree = mapCategoryTreeArray(rawCategoryTree);


---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>listing</title>
  </head>
  <body>
    <!-- <Header shadow={true} /> -->
      <Header />
   <PageHeader 
    image={bgHeader.src}
    title="Propiedades" 
    subtitle="Encuentra tu hogar ideal" 
   />
    <CategoriesNavbar 
    client:load 
      categoryTree={categoryTree} 
      />
    <!-- body-->
    <div class="w-full px-2 lg:px-0 py-8">
      <div class="px-4 lg:px-40">
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
